<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Control">

    <!--
      LAYER 2: labelSidebar (dia akan slide in/out)
      layoutX = 60 (tepat di sebelah iconBar), translateX = -200 (hidden)
    -->
    <AnchorPane fx:id="labelSidebar" layoutX="60" prefHeight="600" prefWidth="200" style="-fx-background-color: #2b2b2b;" translateX="-200">
        <children>
            <VBox layoutX="12" layoutY="20" spacing="15.0">
                <children>
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Dashboard">
                  <padding>
                     <Insets bottom="20.0" />
                  </padding></Label>
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Projects" />
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Settings" />
                    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="About" />
                </children>
            </VBox>
        </children>
    </AnchorPane>

    <!--
      LAYER 3: mainContent (akan didorong)
      leftAnchor = 60 (start setelah iconBar)
    -->
    <AnchorPane fx:id="mainContent" style="-fx-background-color: #f4f6f8;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <Label layoutX="20" layoutY="20" style="-fx-font-size: 18;" text="Main Content Area" />
            <!-- contoh konten -->
        </children>
    </AnchorPane>

