<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Control"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f2f2f2;">

    <!-- ========================= -->
    <!-- Main Content              -->
    <!-- ========================= -->
    <AnchorPane fx:id="mainContent"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                style="-fx-background-color: #ffffff;">

        <children>
            <!-- Tombol buka sidebar -->
            <Button fx:id="menuButton"
                    text="≡"
                    layoutX="10" layoutY="10"
                    onAction="#toggleSidebar"
                    style="-fx-font-size: 20;" />

            <!-- contoh konten -->
            <Label text="Main Content Area"
                   layoutX="60" layoutY="12"
                   style="-fx-font-size: 16;" />
        </children>
    </AnchorPane>


    <!-- ========================= -->
    <!-- Sidebar (Overlay)         -->
    <!-- ========================= -->
    <VBox fx:id="sidebar"
          prefWidth="220"
          spacing="12"
          style="-fx-background-color: #2b2b2b; -fx-padding: 15;"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          translateX="-220">

        <children>

            <!-- Tombol tutup sidebar (selalu terlihat karena nempel di sidebar) -->
            <Button text="←"
                    onAction="#toggleSidebar"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-cursor: hand;" />


            <!-- Menu items -->
            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 16;" />
            <Label text="Settings" style="-fx-text-fill: white; -fx-font-size: 16;" />
            <Label text="Profile" style="-fx-text-fill: white; -fx-font-size: 16;" />
            <Label text="About" style="-fx-text-fill: white; -fx-font-size: 16;" />

        </children>
    </VBox>

</AnchorPane>